<script>
  //guessing game
  //guess a number from 1 to 5
  //generate a random number between 1 to 5
// if the guess number matches random number ; then show message won else lost
//run the game for 5 times
//show the number of wons and losts

var numofwon = 0;
var numoflost =0;

for(var i=1; i<=5; i++){
  var guessNumber = parseInt(prompt("enter a number from 1 to 5:"));
var randomNumber = Math.floor(Math.random()*5) + 1;//floor purno songkha debe. +1 er karone 1 theke 5 porjonto number generate hbe.
if(guessNumber===randomNumber){
  console.log("you have won");
  numofwon++;
  
}
else{
  console.log("you have lost.random number was " + randomNumber);
  numoflost++;
  }
}
document.write("Number Of Won =" + numofwon + "</br>");
document.write("Number Of Lost =" + numoflost + "</br>");


  
</script>
   
</body>
</html>

   
</script>
   
</body>
